@model IEnumerable<FlightSystem.Models.Flight>

@{
    ViewBag.Title = "AllFlights";
}

<h2>AllFlights</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Origin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Destination)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfFlight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.firstClassCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Origin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Destination)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfFlight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.firstClassCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td>
            @Html.ActionLink("Book", "Book","FlightBookings",new { id=item.FlightId },new { @class="btn btn-primary"}) |
        </td>
    </tr>
}

</table>
